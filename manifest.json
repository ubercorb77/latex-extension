{
  "manifest_version": 3,
  "name": "LaTeX Copier",
  "description": "Easily copy LaTeX equations from Wikipedia and KaTeX-enabled websites with a single click.",
  "version": "1.0.0",
  "icons": {
    "16": "panda16.png",
    "32": "panda32.png",
    "128": "panda128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
      {
        "js": ["scripts/content.js"],
        "css": ["styles/styles.css"],
        "matches": ["<all_urls>"]
      }
  ],
  "permissions": [
    "clipboardWrite"
  ]
}